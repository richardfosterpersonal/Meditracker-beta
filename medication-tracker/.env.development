# Docker Configuration
COMPOSE_PROJECT_NAME=medication-tracker
PORT=5000
NGINX_PORT=80

# Database
POSTGRES_PASSWORD=development_password
POSTGRES_DB=medication_tracker
POSTGRES_USER=postgres
DATABASE_URL=postgresql://postgres:development_password@db:5432/medication_tracker
DB_MAX_CONNECTIONS=20

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Application
NODE_ENV=development
DEBUG=true
API_V1_STR=/api/v1
BASE_URL=http://localhost:3001
API_URL=http://localhost:5000

# Frontend specific
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_VERSION=/api/v1
PUBLIC_URL=http://localhost:3000

# Security
JWT_SECRET_KEY=development_jwt_secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGIN=http://localhost:3000
SSL_ENABLED=false
