# SonarQube Configuration
SONAR_TOKEN=your-sonar-token-here
SONAR_HOST_URL=your-sonar-url-here
SONAR_ORGANIZATION=your-organization-key-here  # Only needed for SonarCloud

# Optional Configuration
SONAR_BRANCH_NAME=main  # Set this if you want to analyze a specific branch
SONAR_BRANCH_TARGET=main  # Set this for pull request analysis

# Project Configuration
SONAR_PROJECT_KEY=medication-tracker
SONAR_PROJECT_NAME=Medication Tracker
SONAR_PROJECT_VERSION=1.0.0

# Analysis Configuration
SONAR_SOURCES=packages/frontend/src,packages/backend/app,packages/core/src,packages/shared/src
SONAR_TESTS=packages/frontend/src/__tests__,packages/backend/tests,packages/core/src/__tests__,packages/shared/src/__tests__
SONAR_COVERAGE_EXCLUSIONS=**/*.test.ts,**/*.spec.ts,**/tests/**,**/__tests__/**
SONAR_TEST_INCLUSIONS=**/*.test.ts,**/*.spec.ts,**/tests/**,**/__tests__/**

# Quality Gates
SONAR_QUALITY_GATE=medication-tracker-gate
