# Backend Environment Variables
# Copy this file to .env and fill in the values

# JWT Configuration
JWT_SECRET_KEY=your-secure-jwt-secret-key-here  # Generate a secure key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./app.db  # SQLite database path

# Beta Configuration
BETA_MODE=true
BETA_VALIDATION_INTERVAL=3600  # 1 hour in seconds
BETA_BACKUP_INTERVAL=86400     # 24 hours in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
CORS_ORIGINS=["http://localhost:3000"]  # Frontend URL
HASH_ALGORITHM=bcrypt
